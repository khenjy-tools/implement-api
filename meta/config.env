# IRAS ASR+ API Configuration
# Environment: sandbox or production
ENVIRONMENT=sandbox

# Sandbox URLs
SANDBOX_BASE_URL=https://apisandbox.iras.gov.sg/iras
SANDBOX_DEVELOPER_PORTAL=https://apisandbox.iras.gov.sg/iras/devportal/sb

# Production URLs
PRODUCTION_BASE_URL=https://apiservices.iras.gov.sg/iras
PRODUCTION_DEVELOPER_PORTAL=https://apiservices.iras.gov.sg/iras/devportal

# Default to sandbox
BASE_URL=https://apisandbox.iras.gov.sg/iras

# App Credentials (Get from IRAS Developer Portal)
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here

# Callback URL (Must be registered with IRAS)
CALLBACK_URL=https://yourdomain.com/callback

# Request Settings
TIMEOUT=30
RETRY_COUNT=3

# Corppass Authentication
CORPPASS_AUTH_ENDPOINT=/corppass/v1/auth
CORPPASS_TOKEN_ENDPOINT=/corppass/v1/token

# API Endpoints
GST_SUBMISSION_ENDPOINT=/gst/v1/submit
FORM_CS_SUBMISSION_ENDPOINT=/formcs/v1/submit

# Debug Settings
DEBUG=true
LOG_LEVEL=INFO

# Maintenance Hours (Singapore Time)
# Sandbox Daily: 1:00 PM – 3:00 PM, 8:00 PM – 10:00 PM
# Sandbox Weekly: Wednesday 3:00 PM – 11:59 PM
# Production Weekly: Wednesday 2:00 AM – 6:00 AM, Sunday 2:00 AM – 8:30 AM

# Contact Information
IRAS_DIGITAL_PARTNERSHIPS=digital_partnerships@iras.gov.sg
IRAS_ASR_PLUS=asr_plus@iras.gov.sg
IRAS_API_SUPPORT=api_support@iras.gov.sg